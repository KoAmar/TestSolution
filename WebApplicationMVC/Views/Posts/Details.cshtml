@model WebApplicationMVC.ViewModels.PostDetailsAndCommentsViewModel

@{
    ViewBag.Title = "Post Details";
    var photoPath = "/images/" + (Model.PreviewImagePath ?? "noimage.jpg");
}

<div class="row justify-content-around">
    <div class="card mb-1 bg-light">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h5 class="card-title">
                    @Html.DisplayFor(modelItem => Model.Title)
                </h5>
                <p class="text-muted">
                    @Html.DisplayFor(modelItem => Model.CreatorLogin) at
                    @Html.DisplayFor(modelItem => Model.CreationDate)
                </p>
            </div>
            <img class="card-img-top imageThumbnail " style="border-radius: 8px" src="@photoPath" asp-append-version="true" alt="" />

            <br />
            <p class="card-text mt-2">
                @Html.DisplayFor(modelItem => Model.Text)
            </p>
            <div class="d-flex justify-content-center">
                @if (User.Identity.Name != null && User.Identity.Name.Equals(Model.CreatorLogin))
                {
                    <a class="card-link" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="card-link" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                }
                @*<a class="card-link" asp-action="Details" asp-route-id="@item.Id">Details</a>*@
            </div>
        </div>
    </div>
</div>

<br />
<h3>Comments</h3>
<hr />
<form asp-action="Create" asp-controller="Comments">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <input asp-for="NewComment.Text" class="form-control" />
        <span asp-validation-for="NewComment.Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Leave a comment" class="btn btn-primary" />
    </div>
</form>
<hr />

@foreach (var comment in Model.Comments)
{
    @if (comment.ConnectedPostId == Model.Id)
    {
        <div class="card my-1 bg-light">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title">
                        @Html.DisplayFor(modelItem => comment.CreatorLogin)
                    </h5>
                    <p class="text-muted">
                        at @Html.DisplayFor(modelItem => comment.CreationDate)
                    </p>
                </div>

                <br />
                <p class="card-text mt-2">
                    @Html.DisplayFor(modelItem => comment.Text)
                </p>
            </div>
        </div>
    }
}